<h1>Listing touristsites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Rating</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @touristsites.each do |touristsite| %>
      <tr>
        <td><%= touristsite.name %></td>
        <td><%= touristsite.location %></td>
        <td><%= touristsite.description %></td>
        <td><%= touristsite.picture %></td>
        <td><%= touristsite.rating %></td>
        <td><%= touristsite.state %></td>
        <td><%= link_to 'Show', touristsite %></td>
        <td><%= link_to 'Edit', edit_touristsite_path(touristsite) %></td>
        <td><%= link_to 'Destroy', touristsite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

